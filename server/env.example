# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/tmbc-attendance

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# First Admin Credentials (for setup script)
FIRST_ADMIN_EMAIL=admin@tmbc.com
FIRST_ADMIN_PASSWORD=Admin@123456

# Admin Dashboard URL
ADMIN_URL=http://localhost:3000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
# Alternative variable names (also supported)
NODEMAILER_EMAIL_USER=your-email@gmail.com
NODEMAILER_APP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourcompany.com

# Company Information
COMPANY_NAME=TMBC
COMPANY_WEBSITE=https://yourcompany.com

# Mobile App Deep Link
MOBILE_APP_SCHEME=teambo
MOBILE_APP_DOMAIN=yourcompany.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
INVITE_RATE_LIMIT_MAX=5



